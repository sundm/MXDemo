<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dashed_bg"
    android:orientation="vertical"
    tools:context=".fragment.deviceFragment" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/device_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/bracelet_whilte_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/device_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Someone"
                    android:textColor="@color/yellow_title"
                    android:textSize="@dimen/m00_font_size_26pt" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5.0dip"
                    android:text="@string/bracelet_owner"
                    android:textColor="@color/gray_dark_for_text"
                    android:textSize="@dimen/m00_font_size_26pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_mac_info_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:layout_marginTop="8.0dip"
                    android:singleLine="true"
                    android:text="MAC地址:"
                    android:textColor="@color/gray_dark_for_text"
                    android:textSize="@dimen/m00_font_size_20pt" />

                <TextView
                    android:id="@+id/text_mac_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:layout_marginTop="8.0dip"
                    android:singleLine="true"
                    android:text="--:--:--:--"
                    android:textColor="@color/yellow_title"
                    android:textSize="@dimen/m00_font_size_20pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_bettery_info_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:layout_marginTop="8.0dip"
                    android:singleLine="true"
                    android:text="手环电量:"
                    android:textColor="@color/gray_dark_for_text"
                    android:textSize="@dimen/m00_font_size_20pt" />

                <TextView
                    android:id="@+id/text_bettery_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:layout_marginTop="8.0dip"
                    android:singleLine="true"
                    android:text="90%"
                    android:textColor="@color/yellow_title"
                    android:textSize="@dimen/m00_font_size_20pt" />

                <TextView
                    android:id="@+id/text_version_info_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:layout_marginStart="30.0dip"
                    android:layout_marginTop="8.0dip"
                    android:singleLine="true"
                    android:text="固件版本:"
                    android:textColor="@color/gray_dark_for_text"
                    android:textSize="@dimen/m00_font_size_20pt" />

                <TextView
                    android:id="@+id/text_version_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4.0dip"
                    android:layout_marginStart="5.0dip"
                    android:layout_marginTop="8.0dip"
                    android:singleLine="true"
                    android:text="1.1.0"
                    android:textColor="@color/yellow_title"
                    android:textSize="@dimen/m00_font_size_20pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bracelet_img_bg"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="220.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:src="@drawable/device_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/updateBtn"
            style="@style/text_darkShadow8"
            android:layout_width="fill_parent"
            android:layout_height="60.00dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/bracelet_unbound_btn"
            android:text="@string/bracelet_update"
            android:textColor="@color/white"
            android:textSize="@dimen/m00_font_size_30pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/unboundBtn"
            style="@style/text_darkShadow8"
            android:layout_width="fill_parent"
            android:layout_height="60.00dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/bracelet_unbound_btn"
            android:text="@string/bracelet_unbound"
            android:textColor="@color/white"
            android:textSize="@dimen/m00_font_size_30pt" />
    </LinearLayout>

</LinearLayout>